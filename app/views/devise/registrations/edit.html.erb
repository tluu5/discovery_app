<h2 class="my-4 text-center">Edit Your Profile</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-container", method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs row g-3">
    <!-- Username Field -->
    <div class="col-md-12">
      <%= f.input :username, required: true, input_html: { class: "form-control", placeholder: "Enter your username" } %>
    </div>
    <!-- Email Field -->
    <div class="col-md-12">
      <%= f.input :email, required: true, input_html: { class: "form-control", placeholder: "Enter your email" } %>
    </div>
    <!-- Password Field -->
    <div class="col-md-6">
      <%= f.input :password, 
                  required: false,  
                  input_html: { class: "form-control", placeholder: "New password" } %>
    </div>
    <!-- Password Confirmation Field -->
    <div class="col-md-6">
      <%= f.input :password_confirmation, 
                  required: false, 
                  input_html: { class: "form-control", placeholder: "Confirm new password" } %>
    </div>
  </div>

  <div class="form-actions mt-4">
    <%= f.button :submit, "Update Profile", class: "btn btn-primary btn-block" %>
    <%= link_to "Back to locations", locations_path, class: "btn btn-info mr-2" %>
  </div>
<% end %>

<div class="text-center mt-3">
  <h3>Cancel My Account</h3>
  <%= button_to "Cancel my account", registration_path(resource_name), 
                method: :delete, 
                class: "btn btn-danger", 
                data: { confirm: "Are you sure?" } %>
</div>
