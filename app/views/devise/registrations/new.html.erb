<h2 class="my-4 text-center">Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-container" }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs row g-3">
    <div class="col-md-12">
      <%= f.input :email, required: true, autofocus: true, input_html: { class: "form-control", placeholder: "Enter your email" } %>
    </div>
    <div class="col-md-6">
      <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), input_html: { class: "form-control", placeholder: "Enter your password" } %>
    </div>
    <div class="col-md-6">
      <%= f.input :password_confirmation, required: true, input_html: { class: "form-control", placeholder: "Confirm your password" } %>
    </div>
  </div>

  <div class="form-actions mt-4">
    <%= f.button :submit, "Sign up", class: "btn btn-primary btn-block" %>
  </div>
<% end %>

<div class="text-center mt-3">
  <%= render "devise/shared/links" %>
</div>
