<h2 class="my-4 text-center">Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-container" }) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true, input_html: { class: "form-control", placeholder: "Enter your email" } %>
    <%= f.input :password, required: false, input_html: { class: "form-control", placeholder: "Enter your password" } %>
    <%= f.input :remember_me, as: :boolean, inline_label: "Remember me", input_html: { class: "form-check-input" } if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions mt-3">
    <%= f.button :submit, "Log in", class: "btn btn-primary btn-block" %>
  </div>
<% end %>

<div class="text-center mt-3">
  <%= render "devise/shared/links" %>
</div>
