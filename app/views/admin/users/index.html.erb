<h1>Admin: Users</h1>
<%= link_to "Add New User", new_admin_user_path, class: "btn btn-primary mb-4" %>
<table class="table">
  <thead>
    <tr>
      <th>Email</th>
      <th>Role</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.admin? ? "Admin" : "Regular User" %></td>
        <td>
          <%= link_to "Edit", edit_admin_user_path(user), class: "btn btn-warning btn-sm mr-2" %>
          <%= link_to "Delete", admin_user_path(user), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
