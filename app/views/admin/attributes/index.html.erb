<h1>Attributes</h1>
<%= link_to 'New Attribute', new_admin_attribute_path, class: 'btn btn-primary' %>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @attributes.each do |attribute| %>
      <tr>
        <td><%= attribute.name %></td>
        <td><%= attribute.category %></td>
        <td>
          <%= link_to 'Edit', edit_admin_attribute_path(attribute), class: 'btn btn-warning btn-sm' %>
          <%= link_to 'Delete', admin_attribute_path(attribute), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
