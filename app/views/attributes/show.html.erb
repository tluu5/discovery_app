<article>
  <%= render @attribute %>
</article>

<div class="mt-4">
  <%= link_to "Edit this attribute", edit_attribute_path(@attribute), class: "btn btn-warning mr-2" %>
  <%= link_to "Back to attributes", attributes_path, class: "btn btn-info mr-2 mr-2" %>
  <%= button_to "Destroy this attribute", @attribute, method: :delete, data: { confirm: "Are you sure you want to delete this attribute?" }, class: "btn btn-danger" %>
</div>
